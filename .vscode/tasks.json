{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "process",
            "label": "Build Tetris",
            "command": "C:\\MinGW\\bin\\gcc.exe",
            "args": [
                "-g",
                "-Wall",
                "-Wextra",
                "src\\*.c",
                "-o",
                "build\\tetris.exe",
                "-lncurses",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
